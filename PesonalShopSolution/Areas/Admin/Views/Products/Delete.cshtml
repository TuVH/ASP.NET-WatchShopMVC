@model PesonalShopSolution.Areas.Admin.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Delete Product</h4>
                    </div>
                    <p></p>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ProductCode)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ProductCode)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ProductName)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ProductName)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.DetailDescription)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.DetailDescription)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Evaluate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Evaluate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Image)
                            </dt>
                            <dd class="col-sm-10">
                                <img class="image" id="imgPre" src="~/admin/img/pro/@Html.DisplayFor(model => model.Image)" style='width: 150px; height: 150px'>
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Price) $
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Price)
                            </dd>
                            <dt class="col-sm-2">
                               BrandName
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.IdBrandNavigation.BrandName)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdBrand" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <a asp-action="Index">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
