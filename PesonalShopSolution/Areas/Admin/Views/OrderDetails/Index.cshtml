@model IEnumerable<PesonalShopSolution.Areas.Admin.Models.OrderDetails>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProductNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdOrdersNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdOrdersNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOrderDetails">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdOrderDetails">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdOrderDetails">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
