@model IEnumerable<PesonalShopSolution.Areas.Admin.Models.Brand>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <p>
                    <a asp-action="Create" ><i class="fa fa-plus-circle" aria-hidden="true" style="font-size:30px"> Create </i></a>
                </p>
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Brands Table</h4>
                     
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-primary">
                                <th>
                                    ID
                                </th>
                                <th>
                                    BrandsName
                                </th>
                                <th>Edit</th>
                                <th>Delete</th>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdBrand)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BrandName)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.IdBrand"><i class="fa fa-pencil-square-o" style="font-size:20px" aria-hidden="true"></i></a>
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@item.IdBrand"><i class="fa fa-trash" style="font-size:20px" aria-hidden="true"></i></a>
                                        </td>
                                       
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>