@using Microsoft.AspNetCore.Identity
@using PesonalShopSolution.Areas.Admin.Models

@inject SignInManager<AspNetUsers> SignInManager
@inject UserManager<AspNetUsers> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <i class="user"> </i>
    <li class="user_desc" style="font-size:10px;">@UserManager.GetUserName(User)</li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-controller="Home" asp-action="Logout">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <a class="login" asp-controller="Home" asp-action="Login">
        <i class="user"> </i>
        <li class="user_desc">My Account</li>
    </a>
}
