@model PesonalShopSolution.ViewModels.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="account-in">
    <div class="container">
        <form method="post">
            <div class="register-top-grid">
                <h2>PERSONAL INFORMATION</h2>
                <div>
                    <span>First Name<label></label></span>
                    <input type="text" asp-for="FirstName">
                    <span asp-validation-for="FirstName" style="color:red;"></span>
                </div>
                <div>
                    <span>Last Name<label></label></span>
                    <input type="text" asp-for="LastName">
                    <span asp-validation-for="LastName" style="color:red;"></span>
                </div>
                <div>
                    <span>Email Address<label></label></span>
                    <input type="text" asp-for="Email">
                    <span asp-validation-for="Email" style="color:red;"></span>
                </div>
                <div class="clearfix"> </div>
                <a class="news-letter" href="#">

                </a>
            </div>
            <div class="register-bottom-grid">
                <h2>LOGIN INFORMATION</h2>
                <div>
                    <span>Password<label>*</label></span>
                    <input type="password" asp-for="Password">
                    <span asp-validation-for="Password" style="color:red;"></span>
                </div>
                <div>
                    <span>Confirm Password<label>*</label></span>
                    <input type="password" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" style="color:red;"></span>
                </div>
                <div class="register-but">
                    @Html.ValidationMessage("CustomError", new { @style = "color:blue;" })
                    <input type="submit" value="submit">
                </div>
                <div class="clearfix"> </div>
            </div>
        </form>
        <div class="clearfix"> </div>
    </div>
</div>
<div class="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d3150859.767904157!2d-96.62081048651531!3d39.536794757966845!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sin!4v1408111832978"> </iframe>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}